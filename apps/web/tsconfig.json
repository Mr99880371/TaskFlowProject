{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@taskflow/types": ["../../packages/types/src"],
      "@taskflow/domain": ["../../packages/domain/src"],
      "@taskflow/*": ["../../packages/*/src"],
      "@/*": ["src/*"]
    },
    "moduleResolution": "bundler",
    "types": ["node", "jest"],
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    "jsx": "react-jsx",

    "strict": true
  },
  "include": [
    "src",
    "../../packages/types/**/*.ts",
    "../../packages/utils/**/*.ts",
    "vite.config.ts"
  ]
}
